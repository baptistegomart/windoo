{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription</h1>
<div class="row d-flex flex-nowrap mx-auto justify-content-around">

        <div class="col-md-12 form-group">
            {{ form_start(form) }}
            {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr': {'placeholder': 'Votre pseudo'}}) }}
            {{ form_row(form.name, {'label':'Nom','attr': {'placeholder': 'Votre nom'}}) }}
            {{ form_row(form.firstname, {'label':'Prénom','attr': {'placeholder': 'Votre prénom'}}) }}
            {{ form_row(form.email, {'label':'Email','attr': {'placeholder': 'Votre email'}}) }}
            {{ form_row(form.password, {'label':'Mot de passe'}) }}
            {{ form_row(form.confirm_password, {'label':'Confirmation mot de passe'}) }}
            <button type="submit" class="btn btn-primary">Valider</button>
            {{ form_end(form) }}
        </div>
</div>


{% endblock %}