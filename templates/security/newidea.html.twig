{% extends 'base.html.twig' %}

{% block body %}

    <h1>Proposer une nouvelle idée</h1>
<div class="row d-flex flex-nowrap mx-auto justify-content-around">

        <div class="col-md-12 form-group">
            {{ form_start(form) }}
            {{ form_row(form.title, {'label':'Titre','attr': {'placeholder': 'Mon idée en une phrase'}}) }}
            {{ form_row(form.text, {'label':'Mon idée','attr': {'placeholder': 'Soyez créatif(ve)!'}}) }}
            <button type="submit" class="btn btn-primary">Valider</button>
            {{ form_end(form) }}
        </div>
</div>


{% endblock %}